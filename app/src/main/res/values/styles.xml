<resources>


    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#2aa4cd</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="MyTextViewTheme">
        <item name="android:textColor">#2B60DE</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="MyTextViewValueTheme">
        <item name="android:textColor">#2B60DE</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="MyTextViewHeaderTheme">
        <item name="android:textColor">#000080</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyListTheme">
        <item name="android:textColor">#2B60DE</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">#2aa4cd</item>
        <item name="android:bottomDark">#2aa4cd</item>
        <item name="android:bottomMedium">#2aa4cd</item>
        <item name="android:centerBright">#2aa4cd</item>
        <item name="android:centerDark">#2aa4cd</item>
        <item name="android:centerMedium">#2aa4cd</item>
        <item name="android:fullBright">#2aa4cd</item>
        <item name="android:fullDark">#2aa4cd</item>
        <item name="android:topBright">#2aa4cd</item>
        <item name="android:topDark">#2aa4cd</item>
    </style>
    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#B0E0E6</item>
    </style>

</resources>
